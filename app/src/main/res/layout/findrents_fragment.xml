<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:background="@color/white">
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
    android:layout_marginBottom="5dp">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/homepagemain_fragment_occupation"
                  android:text="职业"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  android:gravity="center"
                  android:background="@color/light_grey"
                  android:padding="3dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="爱好"
                  android:id="@+id/homepagemain_fragment_hobby"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  android:gravity="center"
                  android:background="@color/light_grey"
                  android:padding="3dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="职业"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  android:gravity="center"
                  android:background="@drawable/homepage_text_selector"
                  android:padding="3dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="职业"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  android:gravity="center"
                  android:background="@drawable/homepage_text_selector"
                  android:padding="3dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_marginBottom="2dp"
            />
        <ListView android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/homepagemain_fragment1_listview"/>
    </LinearLayout>
</LinearLayout>